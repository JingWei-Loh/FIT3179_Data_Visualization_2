{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
        "url": "https://raw.githubusercontent.com/JingWei-Loh/FIT3179_Homework_W10/main/data/continent_death.csv"
    },
  "title": {
    "text": "Comparative COVID-19 Deaths by Continent",
    "fontSize": 15,
    "offset": 30,
    "anchor": "middle"
  },
"params": [
  {
    "name": "highlight",
    "select": {"type": "point", "on": "mouseover"}
  }
],
  "mark": {
    "type": "arc", 
    "innerRadius": 50,
    "stroke": "gray",
    "cursor": "pointer"
    },
  "encoding": {
    "theta": {"field": "Death_per_10000", "type": "quantitative"},
    "color": {
        "field": "Continent", 
        "type": "nominal",
        "scale": {
          "domain": ["Asia", "Africa", "North America", "South America", "Europe", "Oceania"],
          "range": ["#94F3CF", "#FDC786", "#54C4F5", "#D84755", "#F3E99B", "#F1799B"]
        },
        "legend": {
                "title": [
                  "Continent"
                ],
                "titleFontSize": 12,
                "direction": "vertical",
                "orient": "right",
                "padding": 30
              }
        },
    "tooltip": [
              {"field": "Continent", "title": "Continent", "type": "nominal"},
              {"field": "Death_per_10000", "title": "Death per 10,000 population", "type": "quantitative", "format": ".2f"}
    ],
    "fillOpacity": {
      "condition": {"param": "highlight", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "highlight",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0
  }
    
  },
  "config": {
    "background": "#FFFBF7",
    "font": "Poppins",
    "padding": {
        "top": 10,
        "bottom": 10,
        "left": 30,
        "right": 30
      },
    "view": {"stroke": null},
    "axis": {
      "grid": true,
      "labelColor": "gray",
      "titleColor": "gray",
      "labelFontSize": 12,
      "title": null
    },
    "legend": {
      "titleColor": "gray",
      "labelColor": "gray"
    },
    "title": {
      "fontSize": 14
    }
}
}